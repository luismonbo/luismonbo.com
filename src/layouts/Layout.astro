---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

// Props interface â€” now accepts optional description and image for SEO
// Optional fields use ? syntax (similar to Optional[str] in Python)
interface Props {
	title: string;
	description?: string; // Optional: meta description for SEO
	image?: string;       // Optional: og:image URL for social sharing
}

// Destructure props with defaults
// If description not provided, use a default site description
const {
	title,
	description = "luismonbo - AI Engineer writing about machine learning, analogue photography, and the intersection of technology, politics, and philosophy.",
	image = "/og-image.jpg" // Default OG image (we'll add this later)
} = Astro.props;

// Get the current page URL for canonical and og:url tags
// Astro.url gives us the full URL of the current page
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Page Title -->
		<title>{title}</title>

		<!-- SEO Meta Tags -->
		<!-- Description appears in Google search results under the title -->
		<meta name="description" content={description} />
		<meta name="author" content="luismonbo" />

		<!-- Canonical URL - tells search engines the "official" URL for this page -->
		<!-- Prevents duplicate content issues if same content exists at multiple URLs -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph Tags - Control how links look on Facebook, LinkedIn, etc. -->
		<!-- When you share a link, these tags determine the title, description, and image -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />
		<meta property="og:site_name" content="luismonbo" />

		<!-- Twitter Card Tags - Same as OG but specifically for Twitter/X -->
		<!-- "summary_large_image" shows a big image preview when you tweet the link -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@luismonbo" />
		<meta name="twitter:creator" content="@luismonbo" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(image, Astro.site)} />
	</head>
	<body class="min-h-screen bg-white text-gray-900 antialiased flex flex-col">
		<!-- Header appears on every page that uses this layout -->
		<Header />
		<!--
			<slot /> is where page content gets injected
			max-w-3xl matches the header width for alignment
			py-16 gives generous vertical spacing (Apple-like breathing room)
			flex-1 makes main content grow to push footer to bottom
		-->
		<main class="max-w-3xl mx-auto px-6 py-16 flex-1">
			<slot />
		</main>
		<!-- Footer appears on every page that uses this layout -->
		<Footer />
	</body>
</html>

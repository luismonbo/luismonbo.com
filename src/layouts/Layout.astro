---
import '../styles/global.css'
import Header from '../components/Header.astro'

// Props interface — every layout/component that accepts props should define this
interface Props {
	title: string;
}

// Destructure props — pulls 'title' out of the Astro.props object
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white text-gray-900 antialiased">
		<!-- Header appears on every page that uses this layout -->
		<Header />
		<!-- 
			<slot /> is where page content gets injected
			max-w-3xl matches the header width for alignment
			py-16 gives generous vertical spacing (Apple-like breathing room)
		-->
		<main class="max-w-3xl mx-auto px-6 py-16">
			<slot />
		</main>
	</body>
</html>
